---
import MainLayout from '@/layouts/MainLayout.astro';
import '@/assets/styles/index.css';
import '@/assets/styles/404.css';
const meta = {
  title: '404 Page Not Found',
  description: 'The page you are looking for could not be found.',
};
---

<MainLayout meta={meta}>
  <section class="error-section">
    <div class="container">
      <div class="error-content">
        <div class="error-animation">
          <div class="error-number">4</div>
          <div class="error-circle">
            <div class="error-face">
              <div class="error-eyes">
                <div class="error-eye"></div>
                <div class="error-eye"></div>
              </div>
              <div class="error-mouth"></div>
            </div>
          </div>
          <div class="error-number">4</div>
        </div>

        <h1 class="error-title">Oops! Page Not Found</h1>
        <p class="error-description">
          The page you're looking for seems to have wandered off into the digital void. Don't worry,
          even the best explorers sometimes take a wrong turn!
        </p>
        <div class="error-actions">
          <a href="/" class="btn primary-btn">
            <i class="fas fa-home"></i>
            Go Home
          </a>
          <button onclick="history.back()" class="btn secondary-btn">
            <i class="fas fa-arrow-left"></i>
            Go Back
          </button>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
