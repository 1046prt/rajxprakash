---
import '@/assets/styles/skills.css';
import html5Icon from '@/assets/icons/html5.svg';
import css3Icon from '@/assets/icons/css3.svg';
import javascriptIcon from '@/assets/icons/javascript.svg';
import typescriptIcon from '@/assets/icons/typescript.svg';
import reactIcon from '@/assets/icons/react.svg';
import astroIcon from '@/assets/icons/astro.svg';
import tailwindIcon from '@/assets/icons/tailwind.svg';
import nodejsIcon from '@/assets/icons/nodejs.svg';
import jsonIcon from '@/assets/icons/json.svg';
import pythonIcon from '@/assets/icons/python.svg';
import daIcon from '@/assets/icons/da.svg';
import mlIcon from '@/assets/icons/ml.svg';
import dvIcon from '@/assets/icons/dv.svg';
import rIcon from '@/assets/icons/r.svg';
import javaIcon from '@/assets/icons/java.svg';
import cIcon from '@/assets/icons/c.svg';
import phpIcon from '@/assets/icons/php.svg';
import mongodbIcon from '@/assets/icons/mongodb.svg';
import mysqlIcon from '@/assets/icons/mysql.svg';
import gitIcon from '@/assets/icons/git.svg';
import githubIcon from '@/assets/icons/github.svg';
import chromeIcon from '@/assets/icons/chrome.svg';
import vscodeIcon from '@/assets/icons/vscode.svg';
import figmaIcon from '@/assets/icons/figma.svg';
import canvaIcon from '@/assets/icons/canva.svg';

const skillIcons = {
  HTML5: html5Icon,
  CSS3: css3Icon,
  JavaScript: javascriptIcon,
  TypeScript: typescriptIcon,
  React: reactIcon,
  Astro: astroIcon,
  'Tailwind CSS': tailwindIcon,
  'Node.js': nodejsIcon,
  JSON: jsonIcon,
  Python: pythonIcon,
  'Data Analysis': daIcon,
  'Machine Learning': mlIcon,
  'Data Visualization': dvIcon,
  R: rIcon,
  Java: javaIcon,
  C: cIcon,
  php: phpIcon,
  MongoDB: mongodbIcon,
  MySQL: mysqlIcon,
  Git: gitIcon,
  GitHub: githubIcon,
  'Chrome DevTools': chromeIcon,
  VSCode: vscodeIcon,
  Figma: figmaIcon,
  Canva: canvaIcon,
};

const skillsData = {
  categories: [
    {
      name: 'Web Development',
      skills: [
        { name: 'HTML5', icon: 'fab fa-html5', iconSvg: 'html5.svg' },
        { name: 'CSS3', icon: 'fab fa-css3-alt', iconSvg: 'css3.svg' },
        { name: 'JavaScript', icon: 'fab fa-js', iconSvg: 'javascript.svg' },
        { name: 'TypeScript', icon: 'fab fa-js-square', iconSvg: 'typescript.svg' },
        { name: 'JSON', icon: 'fas fa-file-code', iconSvg: 'json.svg' },
        { name: 'Astro', icon: 'fas fa-code', iconSvg: 'astro.svg' },
        { name: 'React', icon: 'fab fa-react', iconSvg: 'react.svg' },
        { name: 'Tailwind CSS', icon: 'fab fa-css3-alt', iconSvg: 'tailwind.svg' },
      ],
    },
    {
      name: 'Data Science',
      skills: [
        { name: 'Python', icon: 'fab fa-python', iconSvg: 'python.svg' },
        { name: 'Data Analysis', icon: 'fas fa-chart-bar', iconSvg: 'da.svg' },
        { name: 'Machine Learning', icon: 'fas fa-brain', iconSvg: 'ml.svg' },
        { name: 'Data Visualization', icon: 'fas fa-chart-line', iconSvg: 'dv.svg' },
      ],
    },
    {
      name: 'Programming Languages',
      skills: [
        { name: 'Java', icon: 'fab fa-java', iconSvg: 'java.svg' },
        { name: 'C', icon: 'fas fa-c', iconSvg: 'c.svg' },
        { name: 'R', icon: 'fas fa-r', iconSvg: 'r.svg' },
        { name: 'php', icon: 'fas fa-code', iconSvg: 'php.svg' },
      ],
    },
    {
      name: 'Tools & Platforms',
      skills: [
        { name: 'MongoDB', icon: 'fas fa-database', iconSvg: 'mongodb.svg' },
        { name: 'MySQL', icon: 'fas fa-database', iconSvg: 'mysql.svg' },
        { name: 'Git', icon: 'fab fa-git', iconSvg: 'git.svg' },
        { name: 'GitHub', icon: 'fab fa-github', iconSvg: 'github.svg' },
        { name: 'Chrome DevTools', icon: 'fab fa-chrome', iconSvg: 'chrome.svg' },
        { name: 'VSCode', icon: 'fas fa-code', iconSvg: 'vscode.svg' },
        { name: 'Figma', icon: 'fab fa-figma', iconSvg: 'figma.svg' },
        { name: 'Canva', icon: 'fas fa-paint-brush', iconSvg: 'canva.svg' },
      ],
    },
  ],
};
---

<section class="skills-section">
  <div class="skills-container">
    <div class="skills-header">
      <h2 class="skills-title">
        {skillsData.title}
        <span class="skills-highlight">{skillsData.highlight}</span>
      </h2>
    </div>

    <div class="skills-categories-grid">
      {
        skillsData.categories.map((category) => (
          <div class="skills-category-card">
            <h3 class="category-title">{category.name}</h3>
            <div class="skills-grid">
              {category.skills.map((skill) => {
                const iconSrc = skillIcons[skill.name];
                return (
                  <div class="skill-card">
                    <div class="skill-icon-wrapper">
                      <img
                        src={String(iconSrc?.src ?? iconSrc)}
                        alt={skill.name}
                        class="skill-icon"
                      />
                    </div>
                    <span class="skill-name">{skill.name}</span>
                  </div>
                );
              })}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
